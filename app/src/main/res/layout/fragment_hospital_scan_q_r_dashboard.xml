<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HospitalScanQRDashboard"
    android:layout_marginBottom="40dp">

    <!-- Camera View -->
    <SurfaceView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center" />

    <!-- TextView to display scanned information -->
    <TextView
        android:id="@+id/scannedInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Scanned Information will appear here"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:background="#F4F6FC"
        android:padding="16dp"
        android:layout_gravity="top|center_horizontal"
        android:visibility="gone"/> <!-- Initially hidden -->

    <!-- Allocate Bed Button -->
    <Button
        android:id="@+id/allocateBedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:backgroundTint="#FF4081"
        android:padding="12dp"
        android:text="Allocate Bed"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</FrameLayout>
